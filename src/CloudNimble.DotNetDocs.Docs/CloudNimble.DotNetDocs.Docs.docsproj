<Project Sdk="DotNetDocs.Sdk/1.0.0-preview.27">

	<PropertyGroup>
		<KeepLocalOutput>true</KeepLocalOutput>
		<DocumentationType>Mintlify</DocumentationType>
		<GenerateDocumentation>true</GenerateDocumentation>
		<NamespaceMode>Folder</NamespaceMode>
		<ShowDocumentationStats>true</ShowDocumentationStats>
		<!-- Exclude test projects from documentation -->
		<ExcludePatterns>Tests.Shared;*.Sdk</ExcludePatterns>

		<ConceptualDocsEnabled>true</ConceptualDocsEnabled>
		<ShowPlaceholders>false</ShowPlaceholders>

		<MintlifyNavigationMode>Unified</MintlifyNavigationMode>
		<MintlifyTemplate>
			<Name>DotNetDocs</Name>
			<Theme>maple</Theme>
			<Colors>
				<Primary>#419AC5</Primary>
				<Light>#419AC5</Light>
				<Dark>#3CD0E2</Dark>
			</Colors>
			<Logo>
				<Light>/images/logos/dotnetdocs.light.svg</Light>
				<Dark>/images/logos/dotnetdocs.dark.svg</Dark>
			</Logo>
			<Favicon>
				<Light>/images/icons/favicon-96x96.png</Light>
				<Dark>/images/icons/favicon-96x96.png</Dark>
			</Favicon>
			<Navigation>
				<Pages>
					<Groups>
						<Group Name="Getting Started" Icon="stars">
							<Pages>index;why-dotnetdocs;quickstart</Pages>
						</Group>
						<Group Name="Guides" Icon="dog-leashed">
							<Pages>guides/index;guides/pipeline;guides/conceptual-docs;guides/deployment</Pages>
						</Group>
						<Group Name="Providers" Icon="books">
							<Pages>providers/index</Pages>
							<Groups>
								<Group Name="Mintlify" Icon="/images/icons/mintlify.svg" Tag="PARTNER">
									<Pages>providers/mintlify/index;providers/mintlify/navigation;providers/mintlify/dotnet-library</Pages>
								</Group>
							</Groups>
						</Group>
						<Group Name="Plugins" Icon="outlet">
							<Pages>plugins/index</Pages>
						</Group>
						<Group Name="Learnings" Icon="chalkboard-user">
							<Pages>learnings/bridge-assemblies;learnings/sdk-packaging</Pages>
						</Group>
					</Groups>
				</Pages>
			</Navigation>
            <Integrations>
                <GoogleAnalytics4 MeasurementId="G-QZLKD91M9D" />
			</Integrations>
		</MintlifyTemplate>
	</PropertyGroup>

	<ItemGroup>
	  <None Update="D:\GitHub\DotNetDocs\src\dotnetdocs-logo.png" Link="images\logos\dotnetdocs-logo.png" />
	</ItemGroup>

</Project>
<Project Sdk="CloudNimble.DotNetDocs.Sdk/1.0.0">

  <PropertyGroup>
    <!-- Unified navigation mode (default) - all assemblies under one group -->
    <DocumentationRoot>$(MSBuildProjectDirectory)\unified-docs\</DocumentationRoot>
    <DocumentationType>Mintlify</DocumentationType>
    <NamespaceMode>Folder</NamespaceMode>
    <MintlifyNavigationMode>Unified</MintlifyNavigationMode>
    <MintlifyUnifiedGroupName>Complete API Reference</MintlifyUnifiedGroupName>
    
    <!-- Inline Mintlify template configuration -->
    <MintlifyTemplate>
      <Name>Multi-Assembly API Documentation</Name>
      <Description>Unified documentation for multiple assemblies</Description>
      <Theme>mint</Theme>
      <Colors>
        <Primary>#007ACC</Primary>
        <Light>#4FC3F7</Light>
        <Dark>#005A9E</Dark>
      </Colors>
      <Logo>
        <Light>/logo/light.svg</Light>
        <Dark>/logo/dark.svg</Dark>
        <Href>https://example.com</Href>
      </Logo>
      <Favicon>/favicon.png</Favicon>
    </MintlifyTemplate>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference multiple test assemblies -->
    <Assembly Include="..\src\CloudNimble.DotNetDocs.Core\bin\$(Configuration)\net8.0\CloudNimble.DotNetDocs.Core.dll" />
    <Assembly Include="..\src\CloudNimble.DotNetDocs.Mintlify\bin\$(Configuration)\net8.0\CloudNimble.DotNetDocs.Mintlify.dll" />
    <Assembly Include="..\src\Mintlify.Core\bin\$(Configuration)\net8.0\Mintlify.Core.dll" />
  </ItemGroup>

</Project>
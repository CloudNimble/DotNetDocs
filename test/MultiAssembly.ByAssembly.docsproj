<Project>

  <Import Project="..\src\CloudNimble.DotNetDocs.Sdk\Sdk\Sdk.props" />
  <PropertyGroup>
    <!-- ByAssembly navigation mode - separate groups per assembly -->
    <DocumentationRoot>$(MSBuildProjectDirectory)\byassembly-docs\</DocumentationRoot>
    <GenerateDocumentation>true</GenerateDocumentation>
    <DocumentationType>Mintlify</DocumentationType>
    <NamespaceMode>Folder</NamespaceMode>
    <MintlifyNavigationMode>ByAssembly</MintlifyNavigationMode>
    <ExcludePatterns>*.docsproj;**.docsproj</ExcludePatterns>
    <IncludePatterns>../src/**/*.csproj</IncludePatterns>
    
    <!-- Inline Mintlify template configuration -->
    <MintlifyTemplate>
      <Name>Multi-Assembly API Documentation</Name>
      <Description>Documentation organized by assembly</Description>
      <Theme>mint</Theme>
      <Colors>
        <Primary>#2E7D32</Primary>
        <Light>#66BB6A</Light>
        <Dark>#1B5E20</Dark>
        <Background>#F5F5F5</Background>
        <Anchors>#4CAF50</Anchors>
      </Colors>
      <Logo>
        <Light>/logo/light.svg</Light>
        <Dark>/logo/dark.svg</Dark>
      </Logo>
      <Favicon>/favicon.ico</Favicon>
    </MintlifyTemplate>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference multiple test assemblies -->
    <Assembly Include="..\src\CloudNimble.DotNetDocs.Core\bin\$(Configuration)\net8.0\CloudNimble.DotNetDocs.Core.dll" />
    <Assembly Include="..\src\CloudNimble.DotNetDocs.Mintlify\bin\$(Configuration)\net8.0\CloudNimble.DotNetDocs.Mintlify.dll" />
    <Assembly Include="..\src\Mintlify.Core\bin\$(Configuration)\net8.0\Mintlify.Core.dll" />
  </ItemGroup>

  <PropertyGroup>
    <_DotNetDocsTasksFolder>$(MSBuildThisFileDirectory)..\src\CloudNimble.DotNetDocs.Sdk\bin\Debug\</_DotNetDocsTasksFolder>
  </PropertyGroup>

  <Import Project="..\src\CloudNimble.DotNetDocs.Sdk\Sdk\Sdk.targets" />

</Project>